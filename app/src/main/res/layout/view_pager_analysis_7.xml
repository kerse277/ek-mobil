                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hair_analysis_7f"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_marginStart="10dp"
                    android:id="@+id/analysis_group_7F"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/analysis_rb_7f1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7F1"
                        android:text="@string/hair_analysis_7f1" />

                    <RadioButton
                        android:id="@+id/analysis_rb_7f2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7F2"
                        android:text="@string/hair_analysis_7f2" />

                    <RadioButton
                        android:id="@+id/analysis_rb_7f3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7F3"
                        android:text="@string/hair_analysis_7f3" />

                    <RadioButton
                        android:id="@+id/analysis_rb_7f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7F4"
                        android:text="@string/hair_analysis_7f4" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/analysis_back_btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/forward_button_shape"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/analysis_forward_btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/forward_button_shape"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>