                        android:layout_height="wrap_content"
                        android:tag="7D1"
                        android:text="@string/hair_analysis_7d1" />

                    <RadioButton
                        android:id="@+id/analysis_rb_7d2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7D2"
                        android:text="@string/hair_analysis_7d2" />

                    <RadioButton
                        android:id="@+id/analysis_rb_7d3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="7D3"
                        android:text="@string/hair_analysis_7d3" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hair_analysis_7e"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_marginStart="10dp"
                    android:id="@+id/analysis_group_7E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/analysis_rb_7e1"
