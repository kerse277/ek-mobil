<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ekmobil.fragment.OnlineShopFragment">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/online_shop_slider"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/online_shop_slider"
        android:id="@+id/online_shop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="@string/my_category"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/online_shop_rcy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/online_shop_title" />

    <include
        layout="@layout/progress"
        android:visibility="gone" />

</RelativeLayout>
